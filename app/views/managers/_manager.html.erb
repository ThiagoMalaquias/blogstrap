<div id="<%= dom_id manager %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= manager.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= manager.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Password:</strong>
    <%= manager.password %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this manager", manager, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this manager', edit_manager_path(manager), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
